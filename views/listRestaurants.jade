extends layout.jade

block content
	div.row
		div.three.columns
			br
		div.six.columns
			br
			h1 Restaurants
			br
			
	each item in restaurants    
		div.row
			div.two.columns
				img(src='/images/rest.png')
			div.four.columns
				a(href='/view/restaurant/'+item.business_id)
					= item.name
			div.three.columns
				=item.city+', '+item.state
			div.two.columns(style='color:black')
				h4 &#10029&#10029&#10029&#10029

